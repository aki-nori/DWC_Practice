<div class="container">

	<div class="error_explanation">
<%= render "devise/shared/error_messages", resource: @book %>
</div>

	<h2>Editing Book</h2>
	<%= form_for(@book) do |f| %>
	<label>Title</label>
	<%= f.text_field :title, class: "field"; %>
	<br>
	<label>Opinion</label>
	<%= f.text_area :body, class: "field"; %>
	<br>
	<%= f.submit "Update Book" %>
	<% end %>
	<%= link_to "Show", book_path(@book) %>
	|
	<%= link_to "Back", books_path %>

</div>